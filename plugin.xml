<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="com.Qinxue.HideNav"
  version="0.1.0">
  <name>NavHide</name>
  <description>Cordova HideNav Plugin</description>
  <license>Apache 2.0</license>
  <keywords>cordova,HideNav</keywords>


  <js-module src="www/HideNav.js" name="HideNav">
    <clobbers target="window.HideNav" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="HideNavPlugin">
        <param name="android-package" value="com.Qinxue.HideNav.NavHidePlugin"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <source-file src="src/android/HideNavPlugin.java" target-dir="src/com/Qinxue/NavHide" />
  </platform>

  

</plugin>
